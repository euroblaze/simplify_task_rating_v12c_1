<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Rating Questions Form View -->
        <record id="project_task_rating_form" model="ir.ui.view">
            <field name="name">project.task_rating.form</field>
            <field name="model">project.task_rating</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="question"/>
                        </group>
                        <group>
                            <field name="default_question"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Rating Questions List View -->
        <record id="project_task_rating_tree" model="ir.ui.view">
            <field name="name">project.task_rating.tree</field>
            <field name="model">project.task_rating</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="question"/>
                    <field name="default_question"/>
                </tree>
            </field>
        </record>

        <!-- Rating Questions Action -->
        <record model="ir.actions.act_window" id="task_rating_action">
            <field name="name">Rating Questions</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">project.task_rating</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">Rating Questions</p>
            </field>
        </record>

    </data>
</odoo>