<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Task rating questions action -->
        <record id="rating_questions_form" model="ir.ui.view">
            <field name="name">project.task.popup</field>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="rating_questions">
                                <tree>
                                    <field name="question"/>
                                </tree>
                            </field>
                        </group>
                    </sheet>
                    <footer>
                        <button name="write" string="Submit" type="object" class="btn-primary"/>
                        <button string="Cancel" type="object" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>