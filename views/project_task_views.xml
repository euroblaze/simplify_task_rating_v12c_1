<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Rate task button -->
        <record model="ir.ui.view" id="task_rating_form_view_button">
            <field name="name">project.task.extended.form</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <header>
                    <button name="rating_questions_form"
                            type="object"
                            string="Rate Questions"
                            groups="base.group_no_one"
                            class="oe_highlight"/>
                </header>
            </field>
        </record>

        <!-- Task rating in task's form view -->
        <record model="ir.ui.view" id="task_rating_form_view_rating">
            <field name="name">project.task.extended.form2</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='extra_info']" position="after">
                    <page name="task_rating" string="Task Rating">
                        <form string="Task Rating" options="{'always_reload': true}">
                            <group>
                                <field name="rating_questions">
                                    <tree create="false" delete="false">
                                        <field name="question"/>
                                        <field name="rating" widget="priority"/>
                                    </tree>
                                </field>
                            </group>
                            <group>
                                <field name="additional_notes"/>
                            </group>
                        </form>
                    </page>
                    <page name="task_links" string="Task Links">
                        <form string="Task Links">
                            <group>
                                <field name="git_link"/>
                            </group>
                            <group>
                                <field name="sonarqube_link"/>
                            </group>
                            <group>
                                <field name="test_site"/>
                            </group>
                            <group>
                                <field name="functionality_specification" widget="many2many_binary"/>
                            </group>
                        </form>

                    </page>
                </xpath>
            </field>
        </record>

        <!--  Task rating in task's kanban view  -->
        <record model="ir.ui.view" id="task_rating_kanban_view_rating">
            <field name="name">project.task.extended.kanban</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_kanban"/>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <xpath expr="//div[1]" position="inside">
                    <field name="average_rating"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>